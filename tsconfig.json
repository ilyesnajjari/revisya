{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noEmit": true // Add this line
    ,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "*.css": ["./node_modules/@types/empty-module"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "scripts",
    "data",
    "config",
    "config.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
